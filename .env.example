# Application
APP_NAME=keiba-ai
APP_ENV=development
DEBUG=True

# Database
DATABASE_USER=keiba_user
DATABASE_PASSWORD=keiba_password
DATABASE_NAME=keiba_db
DATABASE_PORT=3306
DATABASE_ROOT_PASSWORD=root_password
DATABASE_URL=mysql://${DATABASE_USER}:${DATABASE_PASSWORD}@mysql:3306/${DATABASE_NAME}
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# EvryDB2 External Connection Settings
# MacのIPアドレスまたはホスト名を設定
# 例: EXTERNAL_MYSQL_HOST=192.168.1.100
# 例: EXTERNAL_MYSQL_HOST=macbook.local
EXTERNAL_MYSQL_HOST=
EXTERNAL_MYSQL_PORT=3306

# SSL/TLS Settings (Optional for secure connections)
SSL_ENABLED=false
SSL_CA_CERT_PATH=
SSL_CLIENT_CERT_PATH=
SSL_CLIENT_KEY_PATH=

# Redis
REDIS_URL=redis://redis:6379/0

# API
API_PORT=8000
API_WORKERS=1

# MLflow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=keiba-prediction

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_QUERIES=false
DETAILED_ERRORS=true

# JRA-VAN (実際の値に置き換えてください)
JRAVAN_USER_ID=your_user_id
JRAVAN_PASSWORD=your_password

# Paths
DATA_DIR=/app/data
MODEL_DIR=/app/outputs/models
PREDICTION_DIR=/app/outputs/predictions

# Machine Learning
ML_RANDOM_SEED=42
ML_TEST_SIZE=0.2
ML_VALIDATION_SIZE=0.1

# Jupyter
JUPYTER_TOKEN=your_jupyter_token_here

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0